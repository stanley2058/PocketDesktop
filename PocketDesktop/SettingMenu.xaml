<Window 
        x:Class="PocketDesktop.SettingMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:PocketDesktop"
        mc:Ignorable="d"
        d:DesignHeight="300" d:DesignWidth="450" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True" Width="450" Height="300" BorderThickness="2" BorderBrush="DarkBlue">
    <Grid Background="LightSteelBlue">
        <Button x:Name="BtnClose" Height="30" Width="70" Content="Close" FontSize="18" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,100,10" Foreground="Black" Click="BtnClose_Click"/>
        <Button x:Name="BtnExit" Height="30" Width="70" Content="Exit" FontSize="18" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Foreground="Black" Click="BtnExit_OnClick"/>
        <Button x:Name="BtnReload" Height="30" Width="70" Content="Reload" FontSize="18" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,190,10" Foreground="Black" Click="BtnReload_OnClick"/>
    </Grid>
</Window>
